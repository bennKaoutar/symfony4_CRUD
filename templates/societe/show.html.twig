{% extends 'base.html.twig' %}

{% block title %}Societe{% endblock %}

{% block body %}
    <h1>Societe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ societe.id }}</td>
            </tr>
            <tr>
                <th>Num_siren</th>
                <td>{{ societe.numSiren }}</td>
            </tr>
            <tr>
                <th>Ville_imm</th>
                <td>{{ societe.villeImm }}</td>
            </tr>
            <tr>
                <th>Date_imm</th>
                <td>{{ societe.dateImm ? societe.dateImm|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ societe.nom }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ societe.capital }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('societe_index') }}">back to list</a>

    <a href="{{ path('societe_edit', {'id': societe.id}) }}">edit</a>

